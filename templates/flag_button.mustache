{{!
    @template local_questions/flag_button

    Flag button displayed in quiz review for reporting questions.

    Context variables required for this template:
    * questionid - The question ID
    * alreadyflagged - Whether user has already flagged this question
    * canflag - Whether user has capability to flag

    Example context (json):
    {
        "questionid": 123,
        "alreadyflagged": false,
        "canflag": true
    }
}}
{{#canflag}}
<div class="local-questions-flag-container mt-2 mb-2">
    {{#alreadyflagged}}
    <button type="button"
            class="btn btn-sm btn-secondary local-questions-flag-btn disabled"
            data-questionid="{{questionid}}"
            disabled
            title="{{#str}}alreadyflagged, local_questions{{/str}}">
        <i class="fa fa-check-circle"></i>
        <span class="ms-1">{{#str}}alreadyflagged, local_questions{{/str}}</span>
    </button>
    {{/alreadyflagged}}
    {{^alreadyflagged}}
    <button type="button"
            class="btn btn-sm btn-outline-danger local-questions-flag-btn"
            data-questionid="{{questionid}}"
            title="{{#str}}reportquestion, local_questions{{/str}}">
        <i class="fa fa-exclamation-triangle"></i>
        <span class="ms-1">{{#str}}reportquestion_short, local_questions{{/str}}</span>
    </button>
    {{/alreadyflagged}}
</div>
{{/canflag}}
